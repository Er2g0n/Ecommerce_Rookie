@model List<Structure_Core.ProductManagement.ProductsWithFirstImageDto>
@{
    ViewData["Title"] = "Components - HaiHa Harley";
}
<section class="py-4 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left side: Dropdowns -->
            <div class="col-md-8 d-flex align-items-center gap-3">
                <div>
                    <h6 class="fw-bold text-uppercase mb-2">EQUIPMENT</h6>
                    <div class="d-flex gap-2">
                        <!-- Dropdown 1: Chọn loại -->
                        <select class="form-select border-dark" style="width: 200px;">
                            <option selected>Category</option>
                            <option>Nam</option>
                            <option>Nữ</option>
                            <option>Trẻ em</option>
                        </select>

                        <!-- Dropdown 2: Chọn màu -->
                        <select class="form-select border-dark" style="width: 200px;">
                            <option selected>Brand</option>
                            <option>Đen</option>
                            <option>Đỏ</option>
                            <option>Xám</option>
                            <option>Xanh</option>
                        </select>

                        <button type="submit" class="btn btn-primary">Apply</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">SPARE PARTS & ACCESSORIES HARLEY-DAVIDSON</h2>

        @if (Model == null || !Model.Any())
        {
            <p class="text-center">No components found.</p>
        }
        else
        {
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-6 col-md-3">
                        <a href="/Product/ComponentDetail/@product.ProductCode" class="text-decoration-none text-dark">
                            <div class="card h-100">
                                <img src="@product.FirstImagePath" class="card-img-top" alt="@product.ProductName">
                                <div class="card-body text-center">
                                    <span class="badge bg-danger mb-2">Best Seller</span>
                                    <h6 class="card-title fw-bold">@product.ProductName</h6>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>
</section>